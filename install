if [ $1 == -g ]; then
packdir=/sdcard/games/com.mojang/resource_packs/ACMEPack/
cd acme-pack-installer
cp -r ./src/a/* $packdir
cp -r ./src/d/* $packdir
cp -r ./src/f/* $packdir
cp -r ./src/l/* $packdir
cp -r ./src/m/* $packdir
cp -r ./src/p/* $packdir
cp -r ./src/s/* $packdir
cp -r ./src/t/* $packdir
cp -r ./src/u/* $packdir
exit
fi
if [ $1 == -u ]; then
rm -rf $2/ACMEPack/
rm -rf $2/ACMEPack.zip
rm -rf $2/ACMEPack.mcpack
rm -rf /sdcard/games/com.mojang/resource_packs/ACMEPack/
rm -rf /sdcard/games/com.mojang/resource_packs/ACMEPack.mcpack
rm -rf /sdcard/games/com.mojang/resource_packs/ACMEPack.zip
exit
fi
if [ $1 == -za ]; then
mkdir ./.tmp
cp -r ./src/a/* ./.tmp
cp -r ./src/d/* ./.tmp
cp -r ./src/f/* ./.tmp
cp -r ./src/l/* ./.tmp
cp -r ./src/m/* ./.tmp
cp -r ./src/p/* ./.tmp
cp -r ./src/s/* ./.tmp
cp -r ./src/t/* ./.tmp
cp -r ./src/u/* ./.tmp
cd .tmp
zip -r $2/ACMEPack.zip ./
cd ..
rm -rf ./.tmp
exit
fi
if [ $1 == -ma ]; then
mkdir ./.tmp
cp -r ./src/a/* ./.tmp
cp -r ./src/d/* ./.tmp
cp -r ./src/f/* ./.tmp
cp -r ./src/l/* ./.tmp
cp -r ./src/m/* ./.tmp
cp -r ./src/p/* ./.tmp
cp -r ./src/s/* ./.tmp
cp -r ./src/t/* ./.tmp
cp -r ./src/u/* ./.tmp
cd .tmp
zip -r $2/ACMEPack.mcpack ./
cd ..
rm -rf ./.tmp
exit
fi
if [ $1 == -gma ]; then
mkdir ./.tmp
cp -r ./src/a/* ./.tmp
cp -r ./src/d/* ./.tmp
cp -r ./src/f/* ./.tmp
cp -r ./src/l/* ./.tmp
cp -r ./src/m/* ./.tmp
cp -r ./src/p/* ./.tmp
cp -r ./src/s/* ./.tmp

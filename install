fi
if [ $1 == -gza ]; then
mkdir ./.tmp
cp -r ./src/a/* ./.tmp
cp -r ./src/d/* ./.tmp
cp -r ./src/f/* ./.tmp
cp -r ./src/l/* ./.tmp
cp -r ./src/m/* ./.tmp
cp -r ./src/p/* ./.tmp
cp -r ./src/s/* ./.tmp
cp -r ./src/t/* ./.tmp
cp -r ./src/u/* ./.tmp
